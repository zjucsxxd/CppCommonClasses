#Author: Jeff Bunce
#File type: Linux makefile
#Purpose: Simplify the compilation process
#Options
CC=g++
DEBUG=-g
CFLAGS=-Wall
FILES=client1.cpp stack.cpp #Do Not include header files

#make arguments: release(default), debug

release : $(FILES)
	g++ $(CFLAGS) $(FILES) -o postfixSolver #note: no extension

debug : $(FILES)
	g++ $(CFLAGS) $(FILES) $(DEBUG) -o postfixSolver.dbg

queue : client2.cpp queue.cpp
	g++ client2.cpp queue.cpp -g -o permutate.dbg
	g++ client2.cpp queue.cpp -o permutate